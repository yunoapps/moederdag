<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.yunoapps" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <name>Yuno</name>
    <description>
        Yuno Moederdag
    </description>
    <author email="yuno.apps@gmail.com" href="http://yunoapps.nl">
